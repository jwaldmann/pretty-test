name:                pretty-test
version:             0.1.0.1
synopsis:            performance benchmark for pretty library
description:         performance benchmark for pretty library
homepage:            https://github.com/jwaldmann/pretty-test
license:             GPL-2
license-file:        LICENSE
author:              Johannes Waldmann
maintainer:          johannes.waldmann@htwk-leipzig.de
-- copyright:           
category:            Pretty Printer
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

source-repository head
   type: git
   location: https://github.com/jwaldmann/pretty-test
                               
library
  exposed-modules:     Lib
  other-modules:       Series
  -- other-extensions:    
  build-depends:       base==4.*, time, pretty, wl-pprint, wl-pprint-extras, wl-pprint-text, text, ansi-wl-pprint, mainland-pretty, prettyprinter
  hs-source-dirs:      src
  default-language:    Haskell2010

executable pretty-test
  hs-source-dirs: test
  main-is: Run.hs
  build-depends: base==4.*, pretty-test
  ghc-options: -rtsopts

Test-Suite Run
  Type: exitcode-stdio-1.0
  Hs-source-dirs: test
  Main-is: Run.hs
  Build-depends: base==4.*, pretty-test
  ghc-options: -rtsopts